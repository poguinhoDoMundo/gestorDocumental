@{
    ViewBag.Title = "Reportes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    $(document).ready(function () {
        var loading = $("#loading");
        $(document).ajaxStart(function () {
            loading.show();
        });

        $(document).ajaxStop(function () {
            loading.hide();
        });
    });

</script>


<h3 class="text-center">Eliminar empresa</h3>

<div id="loading" style="display:none" align="center">
    <img src="~/assets/img/activity.gif" />
</div>

@using (Html.BeginForm("pvDelEmpresa", "Banco", FormMethod.Post, new { id = "frm-delUser" }))
{
    <div class="form-control">
        <div class="form-group col-md-12">
            <label for="txNombre">Por favor digite el NIT de la empresa</label>
            <input type="text" class="form-control" id="txNit" name="txNit" placeholder="Empresa a eliminar...">
        </div>
        <div class="form-group col-md-12 text-right">
            <button type="submit" class="btn btn-primary">Eliminar</button>
        </div>
    </div>

    <div class="text-center">@ViewBag.result</div>
}

