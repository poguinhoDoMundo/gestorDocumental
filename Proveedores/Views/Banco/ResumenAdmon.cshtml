@{
    ViewBag.Title = "ResumenAdmon";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
        $(document).ready(function () {
            cargaJuridicas();
            cargaNaturales();
        });

        function cargaJuridicas() {
            var i = '@Url.Action("Personasjuridicas")';
            $("#dvJuridicas").load(i);

        }

        function cargaNaturales() {
            var i = '@Url.Action("PersonasNaturales")';
            $("#dvNaturales").load(i);

        }
</script>

<h2>Listado Empresas</h2>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Personas juridicas </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Personas naturales</a>
    </li>
</ul>



<div class="tab-content" id="myTabContent">

    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div id="dvJuridicas"></div>
    </div>

    <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <div id="dvNaturales"></div>    
    </div>

</div>