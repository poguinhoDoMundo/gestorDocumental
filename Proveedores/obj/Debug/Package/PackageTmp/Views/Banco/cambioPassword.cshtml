
@{
    ViewBag.Title = "cambioPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    $(document).ready(function () {
        
        var loading = $("#loading");
        $(document).ajaxStart(function () {
            loading.show();
        });

        $(document).ajaxStop(function () {
            loading.hide();
        });
               
    });



</script>

<h2>Restaurar contraseña</h2>
<hr />

<small class="text-left">
    Digite su NIT o cedula, después de esto se enviará una nueva contraseña a su correo electrónico. 
</small>

<br />
<br />




@using (Html.BeginForm("updPassword", "Banco", FormMethod.Post, new { id = "frm-password" }))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            <div id="loading" style="display:none">
                <img src="~/assets/img/activity.gif" />
            </div>
        </div>
    </div>

        <div class="form-row">
            <div class="form-group col-md-2"></div>
            <div class="form-group col-md-4">
                <input type="text" class="form-control" id="txNIT" name="txNIT" placeholder="Digite su NIT o cedula">
            </div>

            <div class="form-group col-md-4 text-left">
                <button type="submit" class="btn btn-primary">Cambiar</button>
            </div>

            <div class="form-group col-md-2"></div>

        </div>
}